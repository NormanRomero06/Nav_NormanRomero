<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cantidadEdades">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvDigiteCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite la cantidad de edades"
        android:textSize="20sp"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:id="@+id/etDigiteCantidad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/tvDigiteEdades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite las edades"
        android:textSize="20sp"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="150dp"

        />

    <EditText
        android:id="@+id/etedad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"/>
    <TextView
        android:id="@+id/tvTablaEdades"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:id="@+id/btnCantidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="aceptar"
        android:textSize="20sp"
        android:layout_marginLeft="140dp"
         />



</FrameLayout>