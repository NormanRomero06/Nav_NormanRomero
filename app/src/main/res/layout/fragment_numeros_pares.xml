<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".numerosPares">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvDigiteNumerosPares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite numero de inicio"
        android:textSize="20sp"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:id="@+id/etDigiteNumeroPares"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/tvDigiteNumeroFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite numero Fin"
        android:textSize="20sp"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="150dp"

        />

    <EditText
        android:id="@+id/etNUmeroFin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"/>
    <TextView
        android:id="@+id/tvTablaNumeroPares"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:id="@+id/btnPares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="aceptar"
        android:textSize="20sp"
        android:layout_marginLeft="140dp"
        />




</FrameLayout>